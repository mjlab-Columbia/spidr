{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true,
        "editor.rulers": [
            120
        ],
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "flake8.enabled": true,
    "flake8.args": [
        "--max-line-length=120"
    ]
}